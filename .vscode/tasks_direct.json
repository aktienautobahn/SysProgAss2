{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clang build",
            "type": "shell",
            "command": "clang",
            "args": [
                "-Wall",
                "-Wextra",
                "-pthread",
                "-g",
                "-gdwarf-4",
                "-O0",
                "-I${env:INCLUDE_DIR}",
                "${workspaceFolder}/${env:SRC_DIR}/path/to/your/source.cpp",
                "-o",
                "${workspaceFolder}/${env:BUILD_DIR}/path/to/your/executable"
            ],
            "options": {
                "env": {
                    "SRC_DIR": "src",
                    "TEST_DIR": "test",
                    "INCLUDE_DIR": "include",
                    "BUILD_DIR": "build"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
